@page "/manage-tasks/new"
@page "/manage-tasks/edit/{urlProposalId:int?}"

<div class="container">
	<div class="d-flex justify-content-between align-items-center">
		<h3>Сохранить Заявку</h3>
		<NavLink href="/manage-tasks" class="btn btn-primary btn-sm">Назад</NavLink>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<EditForm Model="model">
				<DataAnnotationsValidator/>

				<div class="md-3">
					<label class="from-labol">Автор:</label>
					<InputText @bind-Value="model.Author" class="form-control" placeholder="Введите название" />
					<ValidationMessage For="()=>model.Author" />
				</div>
				<div class="md-3">
					<label class="from-labol">Подразделение:</label>
					<InputText @bind-Value="model.Department" class="form-control" placeholder="Введите название" />
					<ValidationMessage For="()=>model.Department" />
				</div>
				<div>
					<h3></h3>
				</div>
				<div class="md-3">
					<button type="button" class="orange">Утвердить</button>
				</div>
				<div>
					<h3></h3>
				</div>
				<div class="mb-3 d-flex justify-content-between">
					<button type="reset" class="btn btn-danger">Отменить</button>
					<button type="submit" class="btn btn-success">Сохранить</button>
				</div>
				
			</EditForm>
		</div>

</div>
</div>


@code {
	[Parameter]
	public int? urlProposalId { get; set; }

	private int proposalId => urlProposalId ?? 0;
	private Proposal model = new();
}
